.views
  .views-title{:style => "background: #{@deck.deck_color}"}
    = link_to image_tag("icons8-left.png"), @deck
    %h3{:style => "color: #{@deck.font_color};"}= "Cartas de #{@deck.name}" 

  .views-cont
    - @cards.each do |card|
      .view-pre-card
        %h2= card.question
        %p= card.description 
        .pre-card-btn
          = link_to 'Details'
          = link_to 'Edit'
        -#  = link_to "Details", deck_card_path(deck_code: @deck.code, id: card.id)
    .cont-maker
      = link_to 'New Card', new_deck_card_path(@deck)

