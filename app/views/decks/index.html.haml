%h1 Listing decks

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Category
      %th
      %th
      %th

  %tbody
    - @decks.each do |deck|
      %tr
        %td= deck.name
        %td= deck.description
        %td= deck.category
        %td= link_to 'Show', deck
        %td= link_to 'Edit', edit_deck_path(deck)
        %td= link_to 'Destroy', deck, :method => :delete, :data => { :confirm => 'Are you sure?' }

