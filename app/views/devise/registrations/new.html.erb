<div class="log-container">
  <div class="log-content">
    <%= link_to image_tag("cerrar.png"), root_path, class: "close" %>
    <span class="log-title">
      <h3>Sign up</h3>
      <%= image_tag 'juego-de-cartas-purple.png', alt: 'logo', height: '40', width: '40', class: '' %>
    </span>
    <div class="log-form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", :class => 'log-form-input' },
                      label: false,
                      placeholder: "Email" %>
          <%= f.input :password,
                      required: true,
                      # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", :class => 'log-form-input' },
                      label: false,
                      placeholder: ("Password - #{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", :class => 'log-form-input' },
                      label: false,
                      placeholder: "Password confimation" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", :class => 'log-button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>




